<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="card_background" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#FFCE00</item>
    </style>

    <style name="card_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0375B4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">#3990c1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <!--<item name="android:background">@drawable/shapes</item>-->
    </style>

    <style name="card_detail" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FC4A1A</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:background">@drawable/shapes</item>-->
    </style>

    <style name="pager_task_title" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">#FC4A1A</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">#3990c1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <!--<item name="android:background">@drawable/shapes</item>-->
    </style>

    <style name="pager_task_detail" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">#0375B4</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">#3990c1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <!--<item name="android:background">@drawable/shapes</item>-->
    </style>

</resources>
